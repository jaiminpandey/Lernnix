{
  "manifest_version": 3,
  "name": "Ai assignment converter",
  "version": "1.0",
  "description": "Converts AI chat answers into real-life page answers",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assignment.html",
        "script.js"    
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ]
    }
  ]
}
